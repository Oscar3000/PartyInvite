@model PartyInviteModel

@{
    ViewData["Title"] = "RSVP";
}

<h2>RSVP Form. Sign Up here!</h2>


<div class="container">
    <form asp-action="RSVP" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="willAttend">Attendance</label>
            <select asp-for="willAttend">
                <option value="">choose an option</option>
                <option value="true">Yes, I will attend</option>
                <option value="false">No i can't</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
